# ============================================
# Azure AI Foundry Configuration
# ============================================
# Your Azure AI Foundry project endpoint
# Format: https://<your-project-name>.<region>.api.azureml.ms
AZURE_AI_FOUNDRY_ENDPOINT=https://your-project.eastus.api.azureml.ms

# Azure AI Foundry API Key (or use Managed Identity)
AZURE_AI_FOUNDRY_KEY=your-foundry-api-key-here

# GPT Model Deployment Name (created in AI Foundry)
GPT_DEPLOYMENT_NAME=gpt-4o

# Embedding Model Deployment Name
EMBEDDING_DEPLOYMENT_NAME=text-embedding-ada-002

# API Version for Azure OpenAI
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# ============================================
# Azure AI Search Configuration
# ============================================
# Your Azure AI Search service endpoint
# Format: https://<your-search-service>.search.windows.net
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net

# Admin API Key for Azure AI Search
AZURE_SEARCH_KEY=your-search-admin-key-here

# Name of the search index to create/use
AZURE_SEARCH_INDEX_NAME=enterprise-docs-index

# ============================================
# Azure Storage (Optional - for document backup)
# ============================================
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your-account;AccountKey=your-key;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER_NAME=documents

# ============================================
# Document Processing Configuration
# ============================================
# Chunk size for text splitting (in characters)
CHUNK_SIZE=1000

# Overlap between chunks (in characters)
CHUNK_OVERLAP=200

# Maximum number of chunks to retrieve
MAX_RETRIEVAL_RESULTS=5

# Embedding dimensions (1536 for text-embedding-ada-002)
EMBEDDING_DIMENSION=1536

# ============================================
# RAG Configuration
# ============================================
# Temperature for LLM generation (0.0 - 1.0)
TEMPERATURE=0.7

# Maximum tokens in response
MAX_TOKENS=1000

# System prompt file path (optional)
SYSTEM_PROMPT_PATH=./prompts/system_prompt.txt

# ============================================
# Application Configuration
# ============================================
# Application name
APP_NAME=Enterprise Document Q&A

# Environment (development, staging, production)
ENVIRONMENT=development

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable telemetry/monitoring
ENABLE_TELEMETRY=true

# ============================================
# Security (Production Settings)
# ============================================
# Use Azure Key Vault for secrets (true/false)
USE_KEY_VAULT=false

# Key Vault URL (if using Key Vault)
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# Use Managed Identity for authentication (true/false)
USE_MANAGED_IDENTITY=false

# ============================================
# Advanced Settings
# ============================================
# Enable semantic ranking in Azure Search
ENABLE_SEMANTIC_RANKING=true

# Enable hybrid search (keyword + vector)
ENABLE_HYBRID_SEARCH=true

# Similarity metric for vector search (cosine, dotProduct, euclidean)
VECTOR_SIMILARITY=cosine

# Query type for Azure Search (simple, full, semantic)
QUERY_TYPE=semantic

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Retry attempts for failed requests
MAX_RETRIES=3

# ============================================
# Cost Management
# ============================================
# Daily token budget (optional limit)
DAILY_TOKEN_BUDGET=100000

# Alert threshold (percentage of budget)
BUDGET_ALERT_THRESHOLD=80
